<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<!-- Desktop version of home page -->
			<cms:desktop>
				<section>
					<cms:module
						name="shop"
						action="show_category"
						text_id="escort"
						template="parts/category_preview.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="apartments"
						template="parts/category_preview.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="massage"
						template="parts/category_preview.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="private"
						template="parts/category_preview.xml"
						/>
				</section>
			</cms:desktop>

			<section class="footer_commercial">
				<cms:module
					name="links"
					action="show_group"
					text_id="footer_banners"
					template="parts/links_group_title.xml"
					/>

				<cms:module
					name="links"
					action="show_link_list"
					group="footer_banners"
					limit="5"
					random="1"
					template="parts/footer_commercial.xml"
					/>
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
