<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<cms:script src="_BASEURL.'/site/scripts/banner_system.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="show"/>

			<!-- <cms:raw file="parts/gtmhead.txt"/> -->
			<script type="application/ld+json">
				{
					"@context": "http://schema.org",
					"@type": "WebSite",
					"url": "http://banana.co.il",
					"potentialAction": {
						"@type": "SearchAction",
						"target": "http://banana.co.il/search?query={search_term_string}",
						"query-input": "required name=search_term_string"
					}
				}
			</script>
		</head>

		<body>
			<!-- <cms:raw file="parts/gtmbody.txt"/> -->
			<cms:template file="parts/header.xml"/>

			<!-- Desktop version of home page -->
			<cms:desktop>
				<!-- SEO article -->
				<section class="seo_article">
					<cms:module
						name="articles"
						action="show"
						text_id="seo_article2"
						template="stock/article_generic.xml"
						/>
				</section>
				
				<section>
					<cms:module
						name="shop"
						action="show_category"
						text_id="escort"
						template="parts/category_preview.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="apartments"
						template="parts/category_preview.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="massage"
						template="parts/category_preview.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="private"
						template="parts/category_preview.xml"
						/>
				</section>
			</cms:desktop>

			<!-- Mobile version home page -->
			<cms:mobile>
				<!-- SEO article -->
				<cms:module
					name="articles"
					action="show"
					text_id="seo_article"
					template="stock/article_generic.xml"
					/>
					
				<section>
					<!-- phone link -->
					<cms:module
						name="links"
						action="show"
						text_id="phone"
						template="parts/link.xml"
						/>

					<!-- form advertise here -->
					<form action="URL::make(array(), 'search.xml')" method="get" cms:eval="action" cms:skip_cache="1">
						<label>
							<span><cms:text constant="label_search"/></span>
							<input
								type="search"
								name="query"
								value="isset($_REQUEST['query']) ? fix_chars($_REQUEST['query']) : false"
								cms:optional="value"
								/>
						</label>
						<button type="submit">
							<cms:text constant="button_search"/>
						</button>
					</form>

					<cms:module
						name="shop"
						action="show_category"
						text_id="escort"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="vip"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="private"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="images"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="apartments"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="vip2"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="massage"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="discreet"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="spa"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="transgender"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="gays"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="sado"
						template="parts/services_menu_images.xml"
						/>

					<cms:module
						name="shop"
						action="show_category"
						text_id="required"
						template="parts/services_menu_images.xml"
						/>

					<!-- Manual category links -->
					<a
						class="category"
						href="porn_movies_url"
						cms:constant="href"
						>
						<cms:module
							name="gallery"
							action="show_image"
							text_id="movies"
							template="parts/image.xml"
							/>
						<h3 class="title">
							<cms:text constant="sex_movies"/>
						</h3>
					</a>

					<a
						class="category"
						href="webcam_url"
						cms:constant="href"
						>
						<cms:module
							name="gallery"
							action="show_image"
							text_id="webcam"
							template="parts/image.xml"
							/>
						<h3 class="title">
							<cms:text constant="webcam"/>
						</h3>
					</a>

					<a
						class="category"
						href="forum_url"
						cms:constant="href"
						>
						<cms:module
							name="gallery"
							action="show_image"
							text_id="forum"
							template="parts/image.xml"
							/>
						<h3 class="title">
							<cms:text constant="forum"/>
						</h3>
					</a>
				</section>

				<!-- SEO article -->
				<cms:module
					name="articles"
					action="show"
					text_id="seo_article"
					template="stock/article_generic.xml"
					/>

				<!-- Banners-->
				<div class="commercial">
					<cms:module
						name="links"
						action="show_link_list"
						group="mobile_home_page_banners"
						random="1"
						template="parts/commercial.xml"
						/>
				</div>
			</cms:mobile>

			<section class="footer_commercial">
				<cms:module
					name="links"
					action="show_group"
					text_id="footer_banners"
					template="parts/links_group_title.xml"
					/>

				<cms:module
					name="links"
					action="show_link_list"
					group="footer_banners"
					limit="5"
					random="1"
					template="parts/footer_commercial.xml"
					/>
			</section>

			<!-- SEO article -->
			<cms:module
				name="articles"
				action="show"
				text_id="seo_article"
				template="stock/article_generic.xml"
				/>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
